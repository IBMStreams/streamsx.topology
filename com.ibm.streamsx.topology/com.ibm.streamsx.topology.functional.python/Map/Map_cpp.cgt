// Constructor
MY_OPERATOR::MY_OPERATOR() :
   funcop_(NULL),
   pyInStyleObj_(NULL),
   pyOutNames_0(NULL),
   occ_(-1)
{
    const char * wrapfn = "<%=$pywrapfunc%>";


<%
# If occ parameter is positive then pass-by-ref is possible
